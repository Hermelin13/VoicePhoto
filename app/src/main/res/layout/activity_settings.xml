<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".SettingsActivity">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10sp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="28dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/backbutton"
            android:src="@drawable/baseline_cancel_24"
            app:tint="#FF4A4A" />

        <ImageButton
            android:id="@+id/save"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginStart="28sp"
            android:layout_marginTop="20sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/savebutton"
            android:src="@drawable/download_solid"
            app:tint="#4CAF50" />


        <TextView
            android:id="@+id/changePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/back"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="40dp"
            android:text="@string/setphoto"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/changePhoto"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/hintPhoto"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="#fff"
            android:textColorHint="#5E5E5E"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/changeVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextPhoto"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="40dp"
            android:text="@string/setvideo"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/changeVideo"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/hintVideo"
            android:inputType="text"
            android:minHeight="48dp"
            android:textColor="#fff"
            android:textColorHint="#5E5E5E"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/changeLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextVideo"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="40dp"
            android:text="@string/setlength"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/changeLength"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:autofillHints="-1"
            android:ems="10"
            android:hint="@string/hintLength"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColor="#fff"
            android:textColorHint="#5E5E5E"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/changeCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextLength"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="40dp"
            android:text="@string/setcount"
            android:textColor="#fff"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/changeCount"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:autofillHints="-1"
            android:ems="10"
            android:hint="@string/hintCount"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColor="#fff"
            android:textColorHint="#5E5E5E"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextCount"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp"
            android:text="@string/save"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Switch
            android:id="@+id/switchlanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/switchname"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </RelativeLayout>
</ScrollView>